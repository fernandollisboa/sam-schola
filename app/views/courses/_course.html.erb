<div id="<%= dom_id course %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Name:</strong>
    <%= course.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Year:</strong>
    <%= course.year %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Starts on:</strong>
    <%= course.starts_on %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Ends on:</strong>
    <%= course.ends_on %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this course", course, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this course', edit_course_path(course), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
