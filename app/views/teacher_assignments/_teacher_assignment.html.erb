<div id="<%= dom_id teacher_assignment %>">
  <p class="my-5">
    <strong class="block font-medium mb-1">Teacher:</strong>
    <%= teacher_assignment.teacher.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Subject:</strong>
    <%= teacher_assignment.subject.name %>
  </p>

  <p class="my-5">
    <strong class="block font-medium mb-1">Course:</strong>
    <%= teacher_assignment.course.year %> - <%= teacher_assignment.course.name %>
  </p>

  <% if action_name != "show" %>
    <%= link_to "Show this teacher assignment", teacher_assignment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
    <%= link_to 'Edit this teacher assignment', edit_teacher_assignment_path(teacher_assignment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
    <hr class="mt-6">
  <% end %>
</div>
