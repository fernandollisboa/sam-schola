<div id="enrollments" class="min-w-full ">
  <div class="rounded-xl overflow-auto">
    <table class="border-collapse table-auto w-full text-sm">
      <thead>
        <tr>
          <th class="bg-blue-100 border text-left px-8 py-4 whitespace-nowrap">Code</th>
          <th class="bg-blue-100 border text-left px-8 py-4 whitespace-nowrap">Year</th>
          <th class="bg-blue-100 border text-left px-8 py-4 whitespace-nowrap">Student</th>
          <th class="bg-blue-100 border text-left px-8 py-4 whitespace-nowrap"></th>
        </tr>
      </thead>
      <tbody>
        <% enrollments.each do |enrollment| %>
          <tr>
            <td class="border px-8 py-4 whitespace-nowrap"><%= enrollment.code %></td>
            <td class="border px-8 py-4 whitespace-nowrap"><%= enrollment.course.year %></td>
            <td class="border px-8 py-4 w-full whitespace-nowrap"><%= enrollment.student.name %></td>
            <td class="border px-8 py-4 whitespace-nowrap">
              <%= link_to 'Show', enrollment, class: "rounded-lg py-3 px-5 bg-gray-100 inline-block font-medium" %>
              <%= link_to 'Edit', edit_enrollment_path(enrollment), class: "rounded-lg py-3 ml-2 px-5 bg-gray-100 inline-block font-medium" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>
